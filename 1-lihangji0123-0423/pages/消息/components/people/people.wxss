/* pages/消息/components/people/people.wxss */
.container{
  display: flex;
  margin: 10px;
}
image{
  height: 90px;
  width: 90px;
  margin: 10px;
}
.item{
  margin: 5px;
  text-align: center;
  line-height: 30px;
}
.text1{
  font-size: 15px;
  text-align: left;
  font-family: PingFangSC-Medium;
}
.text2{
  font-size: 12px;
  color: #dfaf6b;
  text-align: left;
  font-family: PingFangSC-Medium;
}
.text3{
  font-size: 13px;
  opacity: 0.3;
  font-family: PingFangSC-Regular;
}
.bottom{
  border-bottom: 1px solid #d8d8d8;
  opacity: 0.6;
}
.container1{
  display: flex;
  flex: 1;
}
.container1 > view >image{
  height: 20px;
  width: 20px;
  flex: 1;
  line-height: 1px;
  margin: 3px;
}
.container1 > text{
  text-align: center;
  line-height: 30px;
  font-size: 13px;
}
.active{
  color: #f4ea2a;
}
.inactive{
  color: rgba(0, 0, 0, 10%);
  font-size: 10px !important;
}
.text4{
  flex: 1;
  text-align: center;
  font-size: 13px;
  line-height: 30px;
  color: #dfaf6b;
}